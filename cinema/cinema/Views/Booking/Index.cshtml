@model IEnumerable<cinema.Models.User_Ticket>

@{
    ViewBag.Title = "Index";
}

<h2>Booking Report</h2>

<p>

    @using (Html.BeginForm("Index", "Booking", FormMethod.Get))
    {
<p>
    Genre: @Html.DropDownList("movieGenre", "All")
    Film: @Html.TextBox("SearchString")
    Username: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booktime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnable)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booktime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEnable)
                </td>
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |

                </td>
            </tr>
        }

    </table>
