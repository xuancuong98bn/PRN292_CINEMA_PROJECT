@model IEnumerable<cinema.Models.Film>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu{
    <div class="row-2">
        <ul>
            <li><a href="@Url.Action("Index", "HomePage")" class="active">Home</a></li>
            <li><a href="@Url.Action("Index", "Movies")">Movies</a></li>
            <li><a href="contact-us.html">Contacts</a></li>
            <li><a href="articles.html">My Account</a></li>
            @*<li class="last"><a href="sitemap.html">Sitemap</a></li>*@
