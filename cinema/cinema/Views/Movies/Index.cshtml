                    <p>Doneccursus et amet a mattitor condisse laoreet accum wisis sapibulum orci. Cursuscondimentum dolorem pulvinare lacus amet commod tincidunt tellus quisque donec natibus.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <h3>List <span>Movies</span></h3>
        <ul class="movies">
            @foreach (var item in Model)
            {
                <li>
                    <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    <img src="~/Content/images/@item.Image" alt="" />
                    <p>@Html.DisplayFor(modelItem => item.ContentFilm)</p>
                    <div class="wrapper"><a href="@Url.Action("Detail", "Movies", new { ID = item.ID })" class="link2"><span><span>Read More</span></span></a></div>
