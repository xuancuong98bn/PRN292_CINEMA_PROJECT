@model cinema.ModelsView.BookingView
@{
    ViewBag.Title = "Booking Step 1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu{
    <div class="row-2">
        <ul>
            <li><a href="@Url.Action("Index", "HomePage")">Home</a></li>
            <li><a href="@Url.Action("Index", "Movies")" class="active">Movies</a></li>
            <li><a href="contact-us.html">Contacts</a></li>
            <li><a href="articles.html">My Account</a></li>
            @*<li class="last"><a href="sitemap.html">Sitemap</a></li>*@
        </ul>
    </div>
}

<div id="content">
    <div class="box">
        <div class="border-right">
            <div class="border-left">
                <div class="inner">
                    <h3><b>@Model.Film.Title</b><span class="showtime-label">Showtimes</span></h3>
                    <div class="img-box1">
                        <img src="~/Content/images/@Model.Film.Image" alt="" />
                        <div class="showtime-wrap">
                            @using (Html.BeginForm("Step2", "Book", FormMethod.Post, new { id = "form1" }))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ModelBookingView" value='@Model' />
                                <input type="hidden" name="ShowtimeID" id="ShowtimeID" value='0' />
                                for (int i = 0; i < Model.ListTimeSlot.Count; i++)
                                {
                                    <div class="button-times" onclick="submitForm(@Model.ListShowtime[i].ID)">
                                        @Model.ListTimeSlot[i].BeginTime.ToShortTimeString() - @Model.ListTimeSlot[i].EndTime.ToShortTimeString()
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="book-wrap">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
    </div>
</div>
<script>
    function submitForm(stID) {
        document.getElementById("ShowtimeID").value = stID;
        document.getElementById("form1").submit();
    }
</script>
